{{#section 'head'}}
    <title>FakeOil</title>
    <link href="style/experiment.css" rel="stylesheet">
    <link
            rel="stylesheet"
            href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
            crossorigin=""
    />
{{/section}}


	<div class="container">
        <div class="header">
            <div class="logo">Logo</div>
            <div class="register">
                <button>Sign in/Register</button>
            </div>           
        </div>
        <div class="main-content">
          <div class="left-sidebar">Left Sidebar</div>
          <div class="right-content">
            <div class="top-right">
                <div class="top-right-left">
                    <div id="map"></div>
                </div>
                <div class ="top-right-right">
                    <table>
                        {{#with prices}}
                        <caption> Price Table</caption>
                        <tr>
                            <th>Gas Type</th>
                            <th> Price </th>
                        </tr>
                        <tr>
                            <td> N95</td>
                            <td> {{n95}}</td>
                        </tr>
                        <td>
                            Diesel
                        </td>
                        <td>
                            {{diesel}}
                        </td>
                        {{/with}}
                    </table>
                </div>
            </div>
            <div class="bottom-right">
              <div class="bottom-right-left">
                <button id="btn-find-nearest-gs">Go to my nearest station!</button>
              </div>
              <div class="bottom-right-right">
                <p> Get Offer Now!</p>
                <p> Upgrade to Premium!</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    <data id="map-data" value="{{map_data}}"></data>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="script/map.js"></script>
    <script src="script/index.js"></script>